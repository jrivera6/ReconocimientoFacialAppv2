<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CamaraResultActivity">

    <ImageView
        android:id="@+id/img_vistaprevia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_examinar"/>

    <Button
        android:id="@+id/btn_examinar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Examinar"
        style="@style/Widget.AppCompat.Button.Colored"/>

    <TextView
        android:id="@+id/txt_alegria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Alegre: 100"
        android:layout_above="@+id/txt_genero"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Genero: Hombre"
        android:layout_above="@+id/btn_examinar"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"/>

</RelativeLayout>